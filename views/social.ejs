<%- include('header') %>

<div class="container" style="margin-top: 30px;">
    <h1 style="text-align: center; margin-bottom: 40px;">Community Activity</h1>

    <div class="social-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); gap: 25px;">
        <% if (bookings && bookings.length > 0) { %>
            <% bookings.forEach(booking => { %>
                <div class="activity-card" style="background: white; border: 1px solid #ccc; padding: 25px; display: flex; align-items: center; gap: 20px;">
                    <div class="avatar" style="width: 60px; height: 60px; background: #eee; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 1.5em; flex-shrink: 0;">
                        <%= booking.username.charAt(0).toUpperCase() %>
                    </div>
                    <div class="activity-info" style="flex-grow: 1;">
                        <div style="font-weight: bold; font-size: 1.1em; margin-bottom: 4px;"><%= booking.username %></div>
                        <div style="margin-bottom: 8px;">
                            is going to <strong><%= booking.activity_name %></strong>
                        </div>
                        <div style="font-size: 0.85em; display: flex; align-items: center; gap: 5px;">
                            <%= new Date(booking.booking_date).toLocaleDateString('en-US', { weekday: 'long', month: 'short', day: 'numeric' }) %>
                            <span style="margin: 0 5px;">â€¢</span>
                            <%= booking.start_time.slice(0,5) %>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div style="grid-column: 1/-1; text-align: center; padding: 40px; border: 1px solid #ccc;">
                <h3>No recent activity</h3>
                <p>Be the first to book a class!</p>
                <a href="/" class="btn" style="display: inline-block; margin-top: 15px; padding: 10px 20px; text-decoration: none; font-weight: bold; border: 1px solid #333;">Book a Class</a>
            </div>
        <% } %>
    </div>
</div>

<%- include('footer') %>