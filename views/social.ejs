<%- include('header') %>
<link rel="stylesheet" href="/css/social.css">

<div class="community-container">
    <h1 class="page-title">Community Activity</h1>

    <div class="social-grid">
        <% if (bookings && bookings.length > 0) { %>
            <% bookings.forEach(booking => { %>
                <div class="activity-card">
                    <div class="avatar">
                        <%= booking.username.charAt(0).toUpperCase() %>
                    </div>
                    <div class="activity-info">
                        <div class="username"><%= booking.username %></div>
                        <div class="activity-details">
                            is going to <strong><%= booking.activity_name %></strong>
                        </div>
                        <div class="timestamp">
                            <%= new Date(booking.booking_date).toLocaleDateString('en-US', { weekday: 'long', month: 'short', day: 'numeric' }) %>
                            <i class="fas fa-circle separator"></i>
                            <%= booking.start_time.slice(0,5) %>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="empty-state">
                <h3>No recent activity</h3>
                <p>Be the first to book a class!</p>
                <a href="/" class="btn-action">Book a Class</a>
            </div>
        <% } %>
    </div>
</div>

<%- include('footer') %>