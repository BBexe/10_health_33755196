<!-- Flash message container (hidden, for JS alerts) -->
<% if (locals.flash) { %>
    <div id="flash-message" data-title="<%= flash.type === 'error' ? 'Error!' : 'Success!' %>"
        data-type="<%= flash.type === 'error' ? 'error' : 'success' %>" data-message="<%= flash.message %>"
        style="display: none;">
    </div>
    <% } %>

        <!-- SweetAlert2 library for alerts -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <!-- Custom JS for showing alerts -->
        <script src="/js/alerts.js"></script>

