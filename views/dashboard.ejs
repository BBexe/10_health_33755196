<%- include('header') %>
    <link rel="stylesheet" href="/css/dashboard.css">

    <!-- Main dashboard container -->
    <div class="dashboard-container">

        <!-- Dashboard header section -->
        <div class="dashboard-header">
            <h1>Welcome, <%= (typeof user !=='undefined' && user) ? user.username : 'Guest' %>!</h1>
            <p>Here is your activity overview.</p>
        </div>

        <!-- User Info Cards -->
        <% if (typeof user !=='undefined' && user) { %>
            <!-- User info cards section -->
            <div class="user-info-section">
                <!-- Username card -->
                <div class="user-stat">
                    <span class="stat-label">Username</span>
                    <span class="stat-value">
                        <%= user.username %>
                    </span>
                </div>

                <div class="stat-divider"></div>

                <!-- Token balance card -->
                <div class="user-stat">
                    <span class="stat-label">Token Balance</span>
                    <span class="stat-value tokens">
                        <%= user.token_balance %>
                    </span>
                </div>

                <div class="stat-divider"></div>

                <!-- Membership tier card -->
                <div class="user-stat">
                    <span class="stat-label">Membership Tier</span>
                    <span class="stat-value tier">
                        <%= user.membership_tier %>
                    </span>
                </div>
            </div>
            <% } %>

                <h3 class="section-title">My Bookings</h3>

                <% if (typeof bookings !=='undefined' && bookings.length> 0) { %>
                    <!-- Responsive table for bookings -->
                    <div class="table-responsive">
                        <!-- Bookings table -->
                        <table class="bookings-table">
                            <thead>
                                <tr>
                                    <th>Activity</th>
                                    <th>Day</th>
                                    <th>Time</th>
                                    <th>Status</th>
                                    <th style="text-align: right;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% bookings.forEach(booking=> { %>
                                    <tr>
                                        <td><span class="activity-name">
                                                <%= booking.name %>
                                            </span></td>
                                        <td>
                                            <%= booking.day %>
                                        </td>
                                        <td>
                                            <%= booking.start_time %>
                                        </td>
                                        <td>
                                            <span class="status-badge">
                                                <%= booking.status %>
                                            </span>
                                        </td>
                                        <td style="text-align: right;">
                                            <form action="/schedule/cancel" method="POST"
                                                id="cancelForm-<%= booking.id %>">
                                                <input type="hidden" name="booking_id" value="<%= booking.id %>">
                                                <button type="button" class="cancel-btn"
                                                    onclick="confirmCancel('<%= booking.id %>')">Cancel</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <!-- Empty state for no bookings -->
                        <div class="empty-state">
                            <p>You haven't booked any classes yet.</p>
                            <a href="/" class="btn-primary">Browse Schedule</a>
                        </div>
                        <% } %>

    </div>

    <%- include('footer') %>

        <!-- Script for booking cancellation confirmation -->
        <script>
            function confirmCancel(bookingId) {
                Swal.fire({
                    title: 'Cancel Booking?',
                    text: "Tokens will be refunded to your account.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, cancel it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        document.getElementById('cancelForm-' + bookingId).submit();
                    }
                })
            }
        </script>