<%- include('../header') %>
<link rel="stylesheet" href="/css/routines.css">

<div class="routine-form-container">
    <h1>Create New Routine</h1>
    
    <form action="/routines" method="POST">
        <div class="form-group">
            <label>Routine Name:</label>
            <input type="text" name="routine_name" required>
        </div>
        
        <div class="form-group">
            <label>Description:</label>
            <textarea name="description" rows="4"></textarea>
        </div>
        
        <div class="exercise-section">
            <h3>Add One Exercise (Optional)</h3>
            
            <div class="form-group">
                <label>Exercise Name:</label>
                <input type="text" name="exercise_name" placeholder="e.g., Bench Press">
            </div>
            
            <div class="exercise-grid">
                <div class="form-group">
                    <label>Sets:</label>
                    <input type="number" name="exercise_sets" value="3" min="1">
                </div>
                <div class="form-group">
                    <label>Reps:</label>
                    <input type="number" name="exercise_reps" value="10" min="1">
                </div>
            </div>
        </div>
        
        <div class="form-actions">
            <button type="submit">Save Routine</button>
            <a href="/routines">Cancel</a>
        </div>
    </form>
</div>

<%- include('../footer') %>
